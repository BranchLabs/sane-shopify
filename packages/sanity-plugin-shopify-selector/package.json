{
	"name": "sanity-plugin-shopify-selector",
	"version": "0.0.0",
	"description": "A Sanity.io field for selecting products & collections from a Shopify storefront",
	"author": "Joseph Thomas <joseph@good-idea.studio>",
	"homepage": "https://github.com/good-idea/sane-shopify#readme",
	"license": "ISC",
	"main": "lib/index.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/good-idea/sane-shopify.git"
	},
	"scripts": {
		"test": "echo \"Error: run tests from root\" && exit 1",
		"build": "rimraf ./lib && npm run build:types && npm run build:js",
		"build:types": "tsc --emitDeclarationOnly",
		"build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline --copy-files",
		"clean": "rimraf ./lib",
		"dev": "npm run clean && babel src --watch --out-dir lib --extensions \".ts,.tsx\" --source-maps inline --copy-files"
	},
	"directories": {
		"lib": "lib",
		"test": "__tests__"
	},
	"files": [
		"lib"
	],
	"bugs": {
		"url": "https://github.com/good-idea/sane-shopify/issues"
	},
	"peerDependencies": {
		"react": "^16.2",
		"react-dom": "^16.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.4.0",
		"@babel/plugin-proposal-class-properties": "^7.4.0",
		"@babel/plugin-proposal-object-rest-spread": "^7.4.0",
		"@babel/preset-env": "^7.4.1",
		"@babel/preset-typescript": "^7.3.3",
		"@sanity/base": "^0.140.12",
		"@sanity/components": "^0.140.12",
		"@sanity/form-builder": "^0.140.14",
		"@types/babel__core": "^7.1.1",
		"@types/lodash": "^4.14.123",
		"@types/ramda": "^0.26.7",
		"@types/react": "^16.2.10",
		"@types/react-dom": "^16.2.3",
		"@types/rimraf": "^2.0.2",
		"babel-polyfill": "^6.26.0",
		"react-hot-loader": "^4.8.0",
		"rimraf": "^2.6.3"
	},
	"dependencies": {
		"lodash": "^4.17.11",
		"ramda": "^0.26.1",
		"react-icons": "^3.6.1"
	}
}
