{
	"name": "sane-shopify-monorepo-root",
	"private": true,
	"license": "MIT",
	"scripts": {
		"ncu": "lerna exec -- ncu",
		"ncu:u": "lerna exec -- ncu -u && lerna bootstrap",
		"test:coverage:send": "echo 'No tests yet, write some tests!'",
		"fix": "lerna run fix",
		"bootstrap": "lerna bootstrap",
		"typesync": "lerna exec -- typesync && lerna bootstrap",
		"test": "lerna run test",
		"build": "lerna run build",
		"watch": "lerna run --parallel watch",
		"release": "yarn build && lerna publish --yes"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@commitlint/cli": "^9.0.1",
		"@commitlint/config-conventional": "^9.0.1",
		"@types/jest": "^26.0.4",
		"@types/node": "^14.0.22",
		"@typescript-eslint/eslint-plugin": "^3.6.0",
		"@typescript-eslint/parser": "^3.6.0",
		"eslint": "^7.4.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.3",
		"husky": "^4.2.5",
		"jest": "^26.1.0",
		"lerna": "^3.22.1",
		"markdown-toc": "^1.2.0",
		"nodemon": "^2.0.4",
		"npm-check-updates": "^7.0.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.1.1",
		"tsdx": "^0.13.2",
		"typescript": "^3.9.6",
		"typesync": "^0.7.0",
		"yalc": "^1.0.0-pre.37"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "pretty-quick --staged"
		}
	},
	"dependencies": {}
}
